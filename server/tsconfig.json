{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "target": "es6",
    "lib": [
      "es2020"
    ],
    "skipLibCheck": true,

    // TODO: Turn this on when we get enough coverage
    "noImplicitAny": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "sourceMap": false,
    "outDir": "../tempServer",
    "baseUrl": ".",
    "paths": {
      "*": ["../node_modules/*", "../types/*"],
      "~*": ["./*"]
    }
  },
  "include": ["./**/*"]
}
